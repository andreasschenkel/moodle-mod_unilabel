{{!
    @template unilabletype_imageboard/imagesettings

    Template for displaying the imagesettings.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}

<div id="id-unilabeltype-imageboard-imagesettings" style="visibility: visible;" class="card border-dark">
    <div class="btn btn-close" id="id-unilabeltype-imageboard-imagesettings-close">&times;</div>
    <div class="card-body">
        <div class="card-title alert alert-dark">{{#str}} imagesettings, unilabeltype_imageboard {{/str}}
            number:<span id="id-unilabeltype-imageboard-imagesettings-number">???</span>
        </div>

        <div class="card-text">
            <label for="id-unilabeltype-imageboard-imagesettings-title">{{#str}} title, unilabeltype_imageboard {{/str}}</label>
            <input type="text"
                   id="id-unilabeltype-imageboard-imagesettings-title"
                   maxlength="255"
            />
        </div>

        <div class="card-text id-unilabeltype-imageboard-imagesettings-position">
            <div class="row">
                <div> {{#str}} position, unilabeltype_imageboard {{/str}}</div>
                <div class="card-text">
                    <input type="number"
                           id="id-unilabeltype-imageboard-imagesettings-xposition"
                           min="0"
                           maxlength="10"
                           step="1"/>
                </div>

                <div class="card-text">
                    <input type="number"
                           id="id-unilabeltype-imageboard-imagesettings-yposition"
                           min="0"
                           maxlength="10"
                           step="1"/>
                </div>
            </div>
        </div>

        <div class="card-text">
            <label for="id-unilabeltype-imageboard-imagesettings-border">{{#str}} border, unilabeltype_imageboard {{/str}}</label>
            <input type="number"
                   id="id-unilabeltype-imageboard-imagesettings-border"
                   min="0"
                   maxlength="10"
                   step="1"/>
        </div>

        <div class="card-text">
            <label for="id-unilabeltype-imageboard-imagesettings-borderradius">{{#str}} borderradius, unilabeltype_imageboard {{/str}}</label>
            <input type="number"
                   id="id-unilabeltype-imageboard-imagesettings-borderradius"
                   min="0"
                   maxlength="10"
                   step="1"/>
        </div>

    </div>
</div>